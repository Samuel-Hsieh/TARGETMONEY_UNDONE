<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/TransparentColor" />
                    <stroke android:width="1dp" android:color="@color/White" />
                </shape>
            </item>
            <item android:bottom="1dp" android:top="1dp">
                <shape>
                    <solid android:color="@color/colorAccent" />
                    <stroke android:width="1dp" android:color="@color/targetColor" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/TransparentColor" />
                    <stroke android:width="1dp" android:color="@color/White" />
                </shape>
            </item>
            <item android:bottom="1dp" android:top="1dp">
                <shape>
                    <solid android:color="@color/colorAccent" />
                    <stroke android:width="1dp" android:color="@color/targetColor" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_activated="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/TransparentColor" />
                    <stroke android:width="1dp" android:color="@color/White" />
                </shape>
            </item>
            <item android:bottom="1dp" android:top="1dp">
                <shape>
                    <solid android:color="@color/colorAccent" />
                    <stroke android:width="1dp" android:color="@color/targetColor" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/TransparentColor" />
                    <stroke android:width="1dp" android:color="@color/White" />
                </shape>
            </item>
            <item  android:bottom="1dp" android:top="1dp">
                <shape>
                    <solid android:color="@color/TransparentColor" />
                    <stroke android:width="1dp" android:color="@color/targetColor" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>